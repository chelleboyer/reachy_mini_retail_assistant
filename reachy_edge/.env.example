# .env.example - Copy to .env and configure

# Robot Identity
REACHY_ID=RCH-001
STORE_ID=STORE-001
ZONE_ID=ENTRANCE

# LLM Configuration
LLM_MODE=openai  # "openai" or "local"
OPENAI_API_KEY=your_openai_key_here
# LOCAL_MODEL_PATH=./models/llama-3b.gguf

# π (Second Brain) Integration
PI_URL=https://pi.example.com
PI_API_KEY=your_pi_api_key
PI_ENABLED=false  # Set to true when π backend is ready
EVENT_BATCH_SIZE=50
EVENT_BATCH_INTERVAL_S=5

# Cache Configuration
L2_DB_PATH=./data/cache.db
L1_TTL_SECONDS=300
L1_MAX_SIZE=1000

# Performance
MAX_RESPONSE_WORDS=35
TIMEOUT_S=1.0
CLARIFICATION_LIMIT=1

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
